#!/bin/bash

PIDFILE=/var/run/bugzilla.pid

initialize() {
    arguments=( "$@" )

    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec -it "$CID" /bugzilla/scripts/initialize "${arguments[1]}"
}

changeRootPassword() {
    arguments=( "$@" )

    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec -it "$CID" /bugzilla/scripts/changeRootPassword "${arguments[1]}"
}

changeUserPassword() {
    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec -it "$CID" /bugzilla/scripts/changeUserPassword
}

backup() {
    arguments=( "$@" )

    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec -it "$CID" /bugzilla/scripts/backup "${arguments[1]}"
}

restore() {
    arguments=( "$@" )

    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec -it "$CID" /bugzilla/scripts/restore "${arguments[1]}"
}

bash() {
    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec -it "$CID" sh -c "cd /bugzilla && /bin/bash"
}

case $1 in
    initialize)
        initialize $@
        ;;
    changeRootPassword)
        changeRootPassword $@
        ;;
    changeUserPassword)
        changeUserPassword
        ;;
    backup)
        backup $@
        ;;
    restore)
        restore $@
        ;;
    bash)
        bash
        ;;
    *)
        echo "Usage: $0 (initialize | changeRootPassword | changeUserPassword | backup | restore | bash)"
        ;;
esac
