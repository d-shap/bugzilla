#!/bin/bash

PIDFILE=/var/run/bugzilla.pid

initialize() {
    arguments=( "$@" )

    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec -it "$CID" /bugzilla/scripts/utilInitialize "${arguments[1]}"
    if [ $? -ne 0 ];
    then
        exit 2
    fi
}

changeRootPassword() {
    arguments=( "$@" )

    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec -it "$CID" /bugzilla/scripts/utilChangeRootPassword "${arguments[1]}"
    if [ $? -ne 0 ];
    then
        exit 2
    fi
}

changeUserPassword() {
    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec -it "$CID" /bugzilla/scripts/utilChangeUserPassword
    if [ $? -ne 0 ];
    then
        exit 2
    fi
}

backup() {
    arguments=( "$@" )

    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec "$CID" /bugzilla/scripts/utilBackup "${arguments[1]}"
    if [ $? -ne 0 ];
    then
        exit 2
    fi
}

restore() {
    arguments=( "$@" )

    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec "$CID" /bugzilla/scripts/utilRestore "${arguments[1]}"
    if [ $? -ne 0 ];
    then
        exit 2
    fi
}

bash() {
    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec -it "$CID" sh -c "cd /bugzilla && /bin/bash"
    if [ $? -ne 0 ];
    then
        exit 2
    fi
}

case $1 in
    initialize)
        initialize $@
        ;;
    changeRootPassword)
        changeRootPassword $@
        ;;
    changeUserPassword)
        changeUserPassword
        ;;
    backup)
        backup $@
        ;;
    restore)
        restore $@
        ;;
    bash)
        bash
        ;;
    *)
        echo "Usage: $0 (initialize | changeRootPassword | changeUserPassword | backup | restore | bash)"
        ;;
esac
